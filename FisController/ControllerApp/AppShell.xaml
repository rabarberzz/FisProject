<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ControllerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ControllerApp"
    Shell.FlyoutBehavior="Flyout"
    Title="ControllerApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Navigation Setup"
        ContentTemplate="{DataTemplate local:NavigationSetup}"
        Route="NavigationSetup" />
    <ShellContent
        Title="Bluetooth"
        ContentTemplate="{DataTemplate local:BluetoothPage}"
        Route="BluetoothPage" />
    <ShellContent
        Title="ESP Config"
        ContentTemplate="{DataTemplate local:EspConfigPage}"
        Route="ESPConfigPage" />
    <ShellContent
        Title="BLE Write"
        ContentTemplate="{DataTemplate local:TestWriteBLE}"
        Route="TestWriteBLE" IsVisible="False"/>
</Shell>
