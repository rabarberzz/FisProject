<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             x:Class="ControllerApp.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <mapsui:MapControl x:Name="mapControlElement" Grid.Row="0"/>
        <Button Text="Click Me" HeightRequest="10" Clicked="OnButtonClick" BackgroundColor="Gray" Grid.Row="1" HorizontalOptions="FillAndExpand"/>
        <Entry x:Name="responseEntry" Grid.Row="2" HorizontalOptions="FillAndExpand" />
        <Button Text="Click Me Search" HeightRequest="10" Clicked="SearchButton_Clicked" BackgroundColor="Gray" Grid.Row="1" HorizontalOptions="FillAndExpand"/>
    </Grid>

</ContentPage>
