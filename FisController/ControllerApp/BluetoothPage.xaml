<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControllerApp.BluetoothPage"
             Title="BluetoothPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="DeviceTemplate">
                <ViewCell>
                    <StackLayout Orientation="Vertical" Padding="10" VerticalOptions="FillAndExpand" MinimumHeightRequest="100">
                        <Label Text="{Binding Name}" FontSize="Medium" />
                        <Label Text="{Binding Id}" FontSize="Small" />
                        <Label Text="{Binding State}" FontSize="Small" />
                        <Label Text="{Binding BondState}" FontSize="Small" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label 
            Text="Bluetooth page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            x:Name="BleStatusLabel"
            Text="BLE Status"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Button 
            Text="Scan for devices"
            Clicked="OnScanForDevices_Clicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView 
            x:Name="DeviceList"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"
            MinimumHeightRequest="300"
            ItemsSource="{Binding Devices}"
            ItemTemplate="{StaticResource DeviceTemplate}" />
    </VerticalStackLayout>
</ContentPage>