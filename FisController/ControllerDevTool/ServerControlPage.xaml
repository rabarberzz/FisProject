<Page
    x:Class="ControllerDevTool.ServerControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControllerDevTool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="457" Height="370" Background="#FFB1B1B1">
            <TextBlock Text="BLE Server Control" FontSize="36" Margin="0,0,0,20" FocusVisualPrimaryBrush="White" Foreground="Black"/>
            <Button Content="Start Server" Click="StartServer_Click" Margin="0,0,0,10" Background="Black"/>
            <Button Content="Stop Server" Click="StopServer_Click" Margin="0,0,0,10" Background="Black"/>
            <Button Content="Back to Main Page" Click="BackButton_Click" Margin="0,20,0,0" Background="Black"/>
            <TextBlock x:Name="ServerStatusMessage" TextWrapping="Wrap" Text="TextBlock" Height="92"/>
            <TextBlock x:Name="ServerSubscribersCount" TextWrapping="Wrap" Text="nothing" Height="92"/>
        </StackPanel>
    </Grid>
</Page>
